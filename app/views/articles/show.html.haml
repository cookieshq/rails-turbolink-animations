%img{ src: @article.img_url, class: 'show-bg-img', 'data-animate-out': 'animate-slide-out-down'}
.container.show-content-container.text-center.mw-50{'data-animate-out': 'animate-slide-out-down', class: 'animate-slide-in-up'}
  %h1.mb-5= @article.name
  %p.w-75.mx-auto= @article.content

  .text-center.mt-5
    = link_to 'Edit', edit_article_path(@article)
    \|
    = link_to 'Back', articles_path
